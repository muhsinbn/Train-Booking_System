# This is an Oracle RDBMS software that uses SQL as its primary language for working with data.

ALTER SESSION SET "_ORACLE_SCRIPT"=TRUE;

CREATE USER RESERVATION IDENTIFIED BY MANAGER;

GRANT DBA TO RESERVATION;

COMMIT;

CONNECT RESERVATION/MANAGER;

CREATE TABLE "RESERVATION"."CUSTOMER"
(
"EMAIL_ID" VARCHAR2(40) PRIMARY KEY,
"PWORD" VARCHAR2(20) NOT NULL,
"FNAME" VARCHAR2(20) NOT NULL,
"LNAME" VARCHAR2(20),
"ADDR" VARCHAR2(100),
"PHNO" NUMBER(12) NOT NULL
);

CREATE TABLE "RESERVATION"."ADMIN"
(
"EMAIL_ID" VARCHAR2(40) PRIMARY KEY,
"PWORD" VARCHAR2(20) NOT NULL,
"FNAME" VARCHAR2(20) NOT NULL,
"LNAME" VARCHAR2(20),
"ADDR" VARCHAR2(100),
"PHNO" NUMBER(12) NOT NULL
);

CREATE TABLE "RESERVATION"."HISTORY"
(
"TRANS_ID" VARCHAR2(36) PRIMARY KEY,
"EMAIL_ID" VARCHAR2(40) REFERENCES "RESERVATION"."CUSTOMER"(MAILID),
"TR_NO" NUMBER(10),
"DATE" DATE,
"FROM_STN" VARCHAR2(20) NOT NULL,
"TO_STN" VARCHAR2(20) NOT NULL,
"SEATS" NUMBER(3) NOT NULL,
"AMOUNT" NUMBER(8,2) NOT NULL
);

COMMIT;
